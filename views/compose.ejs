<%- include('partials/header'); -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="exampleFormControlInput1">Title</label>
    <input type="text" name="postTitle" class="form-control" id="exampleFormControlInput1" placeholder="Day 1" autofocus>
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Post</label>
    <textarea class="form-control" name="postContent" id="exampleFormControlTextarea1" rows="3" autofocus></textarea>
  </div>

<button type="submit" class="btn btn-primary">Publish</button>
</form>

